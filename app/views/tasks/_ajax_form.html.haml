= form_for [@userstory, @task], remote: true do |f|
  %legend New task
  %button.btn.close.pull-right{type: 'button'} &times;
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :complete
    = f.check_box :complete
  .actions
    = f.submit 'Save'
