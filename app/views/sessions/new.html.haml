= form_tag sessions_path do
  %fieldset
    %legend Login
    .field
      = label_tag :name
      = text_field_tag :name, params[:name]
    .field
      = label_tag :password
      = password_field_tag :password
    .field
      = link_to 'forgotten password?', new_password_reset_path
    .actions
      = submit_tag 'Log in'
